<Window
	x:Class="Wauncher.Views.MainWindow"
	xmlns="https://github.com/avaloniaui"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:asyncImageLoader="clr-namespace:AsyncImageLoader;assembly=AsyncImageLoader.Avalonia"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	xmlns:svg="clr-namespace:Avalonia.Svg.Controls;assembly=Avalonia.Svg.Skia"
	xmlns:vm="using:Wauncher.ViewModels"
	Title="ClassicCounter Wauncher"
	Width="480"
	Height="128"
	d:DesignHeight="128"
	d:DesignWidth="480"
	x:DataType="vm:MainWindowViewModel"
	Icon="/Assets/Wauncher.ico"
	mc:Ignorable="d">

	<Design.DataContext>
		<vm:MainWindowViewModel />
	</Design.DataContext>
	<Grid Background="Black">
		<Grid Margin="25,16" VerticalAlignment="Top">
			<StackPanel Orientation="Horizontal" Spacing="8">
				<Border
					Width="32"
					Height="32"
					Background="White"
					ClipToBounds="True"
					CornerRadius="16">
					<Image asyncImageLoader:ImageLoader.Source="{Binding ProfilePicture}" Stretch="UniformToFill" />
				</Border>
				<TextBlock Classes="h1" Text="{Binding UsernameGreeting}" />
			</StackPanel>
			<StackPanel
				HorizontalAlignment="Right"
				VerticalAlignment="Center"
				Orientation="Horizontal"
				Spacing="8">
				<Ellipse
					Width="8"
					Height="8"
					Fill="{Binding WhitelistStatus}" />
				<TextBlock
					Classes="h1"
					Text="Unknown"
					TextAlignment="Right" />
				<Button
					Classes="info"
					Click="Button_Info">
					<TextBlock Classes="h2">
						?
					</TextBlock>
				</Button>
			</StackPanel>
		</Grid>
		<Grid Margin="25,16" VerticalAlignment="Bottom">
			<StackPanel>
				<TextBlock Classes="h1" Text="{Binding GameStatus}" />
				<TextBlock Classes="h1" Text="{Binding ProtocolManager}" />
			</StackPanel>
			<Button
				Classes="launch"
				Click="Button_Click">
				<StackPanel Orientation="Horizontal" Spacing="8">
					<Svg
						Width="17"
						Height="23"
						Path="/Assets/CS-logo.svg" />
					<TextBlock Classes="h2">
						Launch Game
					</TextBlock>
				</StackPanel>
			</Button>
		</Grid>
	</Grid>
</Window>
